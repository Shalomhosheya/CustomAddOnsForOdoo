<odoo>
    <record id="view_cf_customer_tree" model="ir.ui.view">
        <field name="name">cf.customer.tree</field>
        <field name="model">cf.customer</field>
        <field name="arch" type="xml">
            <tree>
                <field name="customercode"/>
                <field name="name"/>
                <field name="date"/>
                <field name="size"/>
            </tree>
        </field>
    </record>

<record id="view_cf_customer_form" model="ir.ui.view">
    <field name="name">cf.customer.form</field>
    <field name="model">cf.customer</field>
    <field name="arch" type="xml">
        <form>
            <header>
                <button name="action_confirm" string="Confirm" type="object" class="btn-primary"/>
            </header>
            <sheet>
                <group>
                    <field name="customercode"/>
                    <field name="name"/>
                    <field name="date"/>
                    <field name="size"/>
                </group>
            </sheet>
        </form>
    </field>
</record>
</odoo>
